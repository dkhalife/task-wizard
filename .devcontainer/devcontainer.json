{
	"name": "Tasks",
	"image": "mcr.microsoft.com/devcontainers/go:1-1.23-bookworm",
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {
			"installDirectlyFromGitHubRelease": true,
			"version": "latest"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"installYarnUsingApt": true,
			"version": "latest",
			"pnpmVersion": "none",
			"nvmVersion": "latest"
		}
	},
	"containerEnv": {
		"TW_CONFIG_FILE": "/workspaces/task-wizard/config/config.dev.yaml"
	},
	"customizations": {
		"vscode": {
			"settings": {
				"files.eol": "\r\n",
				"git.autocrlf": false,
				"files.trimFinalNewlines": false
			}
		},
		"codespaces": {
			"repositories": {
				"dkhalife/tasks-frontend": {
					"permissions": {
						"contents": "write",
						"pullRequests": "write"
					}
				},
				"dkhalife/task-wizard": {
					"permissions": {
						"contents": "write",
						"pullRequests": "write"
					}
				}
			}
		}
	},
	"mounts": [
		{
			"source": "${localWorkspaceFolder}/../tasks-frontend",
			"target": "/workspaces/tasks-frontend",
			"type": "bind"
		}
	],
	"workspaceFolder": "/workspaces",
    "runArgs": [
        "--cpus=4",
        "--memory=8g"
    ],
    "hostRequirements": {
        "cpus": 4,
        "memory": "8gb"
    }
}
